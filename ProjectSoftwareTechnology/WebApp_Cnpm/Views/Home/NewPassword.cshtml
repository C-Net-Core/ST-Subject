
@{
    ViewData["Title"] = "New Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WebApp_Cnpm.Models.NewRegister
    <section class="breadcrumb-section set-bg" data-setbg="/img/banner_title.gif" style="background-position:center;background-size:cover;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Vatva Shop</h2>
                        <div class="breadcrumb__option">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                            <span>New Password</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <form asp-controller="Home" asp-action="RePasswordSuccessful" method="post" enctype="multipart/form-data">
        <div class="register-box" style="height:310px;">
            <div class="register_form">
                <input asp-for="@Model.user" hidden />

                <span>NEW PASSWORD</span>
                <input type="password" name="newPw" placeholder="Enter new password" autofocus />

                <span>RE-NEWPASSWORD</span>
                <input type="password" name="reNewPw" placeholder="Re-Enter new password" />

                <input type="submit" value="Confirm" /><br />
                <div class="login_user">
                    <a asp-controller="Home" asp-action="Login" style="color: blueviolet;text-decoration:underline;">Back</a>
                </div>
            </div>
        </div>
    </form>

    @section RegisterConfirm{
        <script type="text/javascript">

            var body = $("html, body");
            body.animate({ scrollTop: 687 });
        </script>
    }



