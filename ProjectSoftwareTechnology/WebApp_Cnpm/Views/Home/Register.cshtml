
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb-section set-bg" data-setbg="/img/banner_title.gif" style="background-position:center;background-size:cover;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Vatva Shop</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>Register</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<form action="/Home/RegisterConfirm" method="POST">
    <div class="register-box">
        <div class="register_form">
            <span>USERNAME</span>
            <input type="text" name="user" placeholder="ecommerce2020" />

            <span>PASSWORD</span>
            <input type="password" name="pwd" placeholder="************" />

            <span>RETYPE PASSWORD</span>
            <input type="password" name="repwd" placeholder="************" />

            <span>ADDRESS</span>
            <input type="text" name="address" placeholder="17 TranPhu St, W.6, D.5, HCM" />

            <span>EMAIL</span>
            <input type="email" name="email" placeholder="ecommerce2020@gmail.com" />

            <input type="submit" name="submit" value="Register"/><br />
            <div class="login_user">
                <a asp-controller="Home" asp-action="Login" style="color: blueviolet;">I am already a member ></a>
            </div>
        </div>
    </div>
</form>

@section Register{ 
    <script type="text/javascript">

        var body = $("html, body");
        body.animate({ scrollTop: 687 });
    </script>
}

