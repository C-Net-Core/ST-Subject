
@using Application.DTOs;


@model WebApp_Cnpm.ViewModels.ProductTypeViewModel

<div class="popup-themsp" id="themloaisp">
    <form asp-action="AddNewBrand" enctype="multipart/form-data">
        <div class="popup-themsp__content" style="height:200px;">
            <div class="popup-themsp__title">Add Brand</div>
            <div class="popup-themsp-left">
                <div class="popup-themsp-left__label">Name Brand</div>
            </div>
            <div class="popup-themsp-right">
                
                <div class="popup-themsp-left__input">
                    <input asp-for="@Model.BrandKeys.Name" />
                </div>
                <input class="popup-themsp__btn" type="submit" value="Xác nhận" onclick="AddNewBrand();"/>
                <span onclick="back_popup_themloaisp();" class="back">x</span>
            </div>
        </div>
    </form>

</div>

<script>

    function AddNewBrand() {
        var name = $("#BrandKeys_Name").val();

        if (name == "") {
            alert("Please enter enough infomation of this brand.");
        }
    }

</script>